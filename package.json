{
  "name": "messenger",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.0.2",
    "pg": "^8.11.3",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.17",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "dev": "nodemon --watch '*/**/*.ts' --exec 'ts-node' src/index.ts",
    "dev:auth": "nodemon --watch '*/**/*.ts' --exec 'ts-node' src/authServer.ts",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "yarn run typeorm migration:generate -- -d ./src/db/dataSource.ts src/db/migrations/migration",
    "migration:run": "yarn run typeorm migration:run -- -d ./src/db/dataSource.ts",
    "migration:revert": "yarn run typeorm migration:revert -- -d ./src/db/dataSource.ts",
    "migration:create": "yarn run typeorm migration:create"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "bcrypt": "^5.1.1"
  }
}
